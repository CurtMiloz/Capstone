<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drink_size_info"
    android:layout_width="match_parent"
    android:layout_height="125dp">

    <TextView
        android:id="@+id/Generic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:text="Calories:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/drink__minus"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Size"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/drink_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Generic"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/Generic"
        android:layout_toRightOf="@+id/Generic"
        android:numeric="integer"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Generic"
        android:layout_alignStart="@+id/Calories1"
        android:layout_alignTop="@+id/drink__minus"
        android:text="Price: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/drink_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignLeft="@+id/drink_calories"
        android:layout_alignStart="@+id/drink_calories"
        android:text="$6.99" />

    <EditText
        android:id="@+id/drink_amt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/drink_calories"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_toEndOf="@+id/Size"
        android:layout_toRightOf="@+id/Size"
        android:autoText="false"
        android:editable="false"
        android:elevation="1dp"
        android:ems="10"
        android:inputType="number"
        android:numeric="integer"
        android:textAlignment="center" />

    <Button
        android:id="@+id/drink__minus"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Size"
        android:layout_alignStart="@+id/Size"
        android:layout_alignTop="@+id/drink_amt"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/drink_amt"
        android:layout_toEndOf="@+id/drink_amt"
        android:layout_toRightOf="@+id/drink_amt"
        android:text="+"
        android:textSize="24sp" />

</RelativeLayout>